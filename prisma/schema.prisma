generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// Может назвать все модели здесь типа PortfolioPrisma ??
model PortfolioModel {
  id       Int         @id @default(autoincrement())
  name     String
  compound Boolean     @default(false)
  user     UserModel   @relation(fields: [userId], references: [id])
  userId   Int
  deals    DealModel[]

  @@map("portfolios")
}

model DepositModel {
  id     Int      @id @default(autoincrement())
  amount Int
  date   DateTime @db.Date

  @@map("deposits")
}

model CashoutModel {
  id     Int      @id @default(autoincrement())
  amount Int
  date   DateTime @db.Date

  @@map("cashouts")
}

model DealModel {
  id           Int            @id @default(autoincrement())
  ticker       String
  exchangeName String
  stockType    String
  amount       Int
  price        Decimal
  board        String
  date         DateTime
  portfolio    PortfolioModel @relation(fields: [portfolioId], references: [id])
  portfolioId  Int

  @@map("deals")
}

model UserModel {
  id             Int              @id @default(autoincrement())
  email          String
  password       String
  name           String
  role           Role             @default(INVESTOR)
  PortfolioModel PortfolioModel[]

  @@map("users")
}

enum Role {
  ADMIN
  INVESTOR
}
